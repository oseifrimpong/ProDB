
<%= form_tag teachers_path, :method => 'get' do %>
 	
	 	<%= text_field_tag :search, params[:search] %>
	 	<%= submit_tag "Search", :name => nil %>
 
 <% end %>

<table class="table">
	<tr>
		<th> First Name</th>
		<th> Last Name</th>
	</tr>

	<% @teachers.each do |teacher| %>
		<tr>
			<td><%= teacher.fname %></td>
			<td><%= teacher.Last_Name %></td>
			
			<td><%= link_to 'Edit', edit_teacher_path(teacher) %></td>
			<td><%= link_to 'Delete', teacher, confirm: 'Are you sure?', method: :delete %></td>
		</tr>
		<% end %>


		 <%= link_to "Add teacher", new_teacher_path %>
</table>
